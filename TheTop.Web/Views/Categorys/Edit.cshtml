@model CategoryVM
@{
    Layout = "_LayoutAdmin";
}
<h2 class="m-5">Edit Category</h2>
<hr />

<form class="d-flex mt-5 " asp-action="Edit" method="post">
    <div class="row  m-auto w-50">


        <div class="form-group mb-2  w-100">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="col-12  form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mt-5 w-50 text-center d-flex justify-content-around">
            <input type="submit" value="Edit" class="btn btn-success font-weight-bold w-50" style="font-size: 17px;" />       
        </div>

    </div>
</form>


@section Scripts{
<partial name="_ValidationScriptsPartial" />
}
