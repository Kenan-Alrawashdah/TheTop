@model CouponVM

@{ Layout = "_LayoutAdmin"; }
<h2 class="m-5">Create Coupon</h2>
<hr />

<form class="d-flex mt-5" asp-action="Create" method="post">
    <div class="row  m-auto w-75">

        <div class="col-6">
            <div class="mb-2">
                <label asp-for="Ratio"></label>
                <input asp-for="Ratio" class="col-12  form-control" />
                <span asp-validation-for="Ratio" class="text-danger"></span>
            </div>
            <div class=" mb-2">
                <label asp-for="ValidityDate"></label>
                <input asp-for="ValidityDate" class="col-12  form-control" />
                <span asp-validation-for="ValidityDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-5 w-50 text-center d-flex justify-content-around">
                <input type="submit" value="Add" class="btn btn-success font-weight-bold w-50" style="font-size: 17px;" />
            </div>
        </div>
        
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

