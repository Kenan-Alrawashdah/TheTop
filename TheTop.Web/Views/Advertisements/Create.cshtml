@model AdvertisementVM

@{
    Layout = "_LayoutCustomer";
}
<h2 class="m-5">Create Advertisement</h2>
<hr />

<form class="d-flex mt-5" asp-action="Create" method="post" enctype="multipart/form-data">
    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    <div class="row  m-auto w-75">

        <div class="col-6">
            <div class="mb-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="col-12  form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class=" mb-2">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="col-12  form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class=" mb-2">
                <label asp-for="CategoryId" for="inputGroupSelect01"></label>
                <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categorys,"ID","Name"))" class="form-control"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="PhotosFiles"></label>
                <input asp-for="PhotosFiles" class="col-12 form-control" type="file" multiple style="" />
                <span asp-validation-for="PhotosFiles" class="text-danger"></span>

            </div>


        </div>
        <div class="form-group mt-5 w-50 text-center d-flex justify-content-around">
            <input type="submit" value="Add" class="btn btn-success font-weight-bold w-25" style="font-size: 17px;" />
        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

