@model IEnumerable<AdvertisementVM>
@{
    List<CategoryVM> categoryslist = ViewBag.categorysList;
   

}


<section id="portfolio" class="portfolio">
    <div class="container" data-aos="fade-up">
        <div class="section-header">
            <h2>Advertisements</h2>
            </div>
            <div class="row" data-aos="fade-up" data-aos-delay="100">
                <div class="col-lg-12 d-flex justify-content-center">
                    <ul id="portfolio-flters">
                        <li data-filter="*" class="filter-active">All</li>
                        @foreach (var item in categoryslist)
                        {
            <li data-filter=".@item.Name">@item.Name</li>
}

                    </ul>
                </div>
            </div>

            <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (var i in Model)
                {

    <div class="col-lg-4 col-md-6 portfolio-item @i.Category">
                    @if(i.PhotosNames.Count > 0)
                    {                        
                    <img src="@i.PhotosNames.First()"  height="300" width="350" class="" alt="">
                    }

        <div class="portfolio-info">
            <div class="d-flex justify-content-between">
                <span class="mb-1 text-white">@i.Category</span>
                <span class="mb-1 text-white">@i.CreatedAT.ToString("d")</span>
            </div>
            <p class="font-weight-bold" style="font-size:20px">@i.Name</p>
            <div class="justify-content-between">

                <div class="d-flex justify-content-between">
                    <div>
                        <p style="font-size:20px">@i.Price.ToString("c")</p>
                    </div>

                    <div class="d-flex justify-content-around align-items-center w-25 ">
                        <div class="mb-2">
                                        @if(i.PhotosNames.Count > 0)
                                        {                                            
                                        <a href="@i.PhotosNames.First()" data-gallery="portfolioGallery" class="portfolio-lightbox" title="FullScreen"><i class="bi bi-arrows-fullscreen m-1 text-white" style="font-size:17px"></i></a>
                                        }

                        </div>
                        <div class="d-flex align-items-center">
                            <a asp-controller="Advertisements" asp-action="Details" asp-route-id="@i.ID" class="" title="More Details"><i class="bx bx-link text-white" style="font-size:22px"></i></a>

                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between pr-2">
                    <a class="btn btn-primary" asp-controller="ShoppingCarts" asp-action="BayNow" asp-route-id="@i.ID">Buy Now</a>

                    <a asp-controller="ShoppingCarts" asp-action="AddToCart" asp-route-id="@i.ID"><i class="bi bi-cart-plus text-danger" title="Add To Cart" style="font-size:25px"></i></a>

                </div>



            </div>


        </div>
    </div>  }

            </div>

        </div>
</section>

