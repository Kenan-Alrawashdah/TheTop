@model AdvertisementVM
@{
Layout = "_LayoutCustomer";
}
<h3 class="m-4 text-secondary">Edit Advertisement</h3>

<form class="d-flex mt-5" asp-action="Edit" method="post" enctype="multipart/form-data">
    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    <div class="row  m-auto w-75">

        <div class="col-6">
            <div class="mb-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="col-12  form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="col-12  form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-5 w-75 text-center d-flex justify-content-around">
                <input type="submit" value="Save" class="btn btn-success font-weight-bold w-50" style="font-size: 17px;" />
            </div>
        </div>

        <div class="col-6">
            <div class="mb-2">
                <label asp-for="CategoryId" for="inputGroupSelect01"></label>
                <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categorys,"ID","Name"))" class="form-control"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="PhotosFiles"></label>
                <input asp-for="PhotosFiles" class="col-12 form-control" type="file" multiple style="" />
                <span asp-validation-for="PhotosFiles" class="text-danger"></span>
                <br />
                <img src="@Model.PhotosNames.First()" width="360" height="200"  />
            </div>

        </div>
        
    </div>
</form>




@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

